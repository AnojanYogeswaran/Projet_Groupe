{% extends 'base.html.twig' %}

{% block title %}Les Championnats
{% endblock %}

{% block body %}
	<div class="mt-3 container text-white">
		<div class="col-7 mx-auto">
			<h2 class="text-center">
				Les championnats</h2>
			<div class="my-3">
				<a class="btn btn-primary" href="{{ path('ajouterchampionnat') }}">
					Ajouter Championnat
				</a>

			</div>
			<table class="table text-white">
				<thead>
					<tr class="text-center">
						<th scope="col">Nom</th>
						<th scope="col">Pays</th>
						<th scope="col">Action</th>

					</tr>
				</thead>
				<tbody>
					{% for championnat in championnats %}

						<tr class="text-center">

							<td class="col-3 text-left">
								{{ championnat.nom }}</td>
							<td class="col-3 text-center">
								{{ championnat.pays }}</td>
							<td>
								<a class="btn btn-primary mx-1" href="{{ path('editerchampionnat',{'id':championnat.id}) }}">
									Editer
								</a>

								<a href="{{ path('supprimerchampionnat',{'id':championnat.id}) }}" type="button" class="btn btn-danger my-1 deleteModalBtn" data-bs-toggle="modal" data-bs-target="#deleteChampionnatModal">
									Supprimer
								</a>
							</td>

						</tr>
						{#	<a class="btn btn-danger mx-1" href="{{ path('supprimerchampionnat',{'id':championnat.id}) }}">
																																																																																	Oui
																																																																																</a>#}
						<div class="modal fade" id="deleteChampionnatModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">

									<div class="modal-body">
										<h5 class="text-dark mt-3">
											Voulez-vous Supprimez ?
										</h5>
									</div>
									<div class="d-flex justify-content-end p-3">
										<a id="delete" class="btn btn-danger mx-1 " href="{{ path('supprimerchampionnat',{'id':championnat.id}) }}">
											Oui
										</a>
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>

									</div>
								</div>
							</div>
						</div>

					{% endfor %}

				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
