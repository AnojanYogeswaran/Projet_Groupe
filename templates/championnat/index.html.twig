{% extends 'base.html.twig' %}

{% block title %}Les Championnats{% endblock %}

{% block body %}
    <div class="mt-3 container text-white">
        <div class="col-7 mx-auto">
            <h2 class="text-center"> Les championnats</h2>
            <div class="my-3">
                <a class="btn btn-primary" href="{{ path('ajouterchampionnat') }}">
                    Ajouter Championnat</a>
            </div>
            <table class="table text-white">
                <thead>
                <tr class="text-center">
                    <th scope="col">Nom</th>
                    <th scope="col">Pays</th>
                    <th scope="col">Action</th>

                </tr>
                </thead>
                <tbody>
                {% for championnat in championnats %}

                    <tr class="text-center">

                        <td class="col-3 text-left"> {{ championnat.nom }}</td>
                        <td class="col-3 text-center"> {{ championnat.pays }}</td>
                        <td> <a class="btn btn-primary mx-1" href="{{ path('editerchampionnat',{'id':championnat.id}) }}"> Editer </a>
                            <a class="btn btn-danger mx-1" href="{{ path('supprimerchampionnat',{'id':championnat.id}) }}"> Supprimer </a>
                        </td>

                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>
        </div>


{% endblock %}
